<h1>
  <%= params.fetch("path_id") %>
</h1>

<img src="<%= @the_provider.image %>">  

<div>
  <h1>
    <%= @the_provider.organization_name %>
  </h1>
  <h1>
    <%= @the_provider.full_name %>
  </h1>
  <h2>
    <%= @the_provider.email %>
  </h2>
  <h2>
    <%= @the_provider.price %>
  </h2>
  <h3>
    <%= @the_provider.schedule %>
  </h3>
</div>

<form action="/insert_availability" method="post">

  <label for="monday_day">Monday</label>
  <input id="monday_day" type="hidden" name="query_day">

  <label for="monday_open_time">Open</label>
  <input id="monday_open_time" type="time" name="query_open_time">

  <label for="monday_close_time">Close</label>
  <input id="monday_close_time" type="time" name="query_close_time">

  <label for="monday_schedule_id"></label>
  <input id="monday_schedule_id" type="hidden" name="query_schedule_id">
  
  <button>Submit</button>
</form>

