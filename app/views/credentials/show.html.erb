<div>
  <div>
    <h1>
      Credential #<%= @the_credential.id %> details
    </h1>

    <div>
      <div>
        <a href="/credentials">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_credential/<%= @the_credential.id %>">
          Delete credential
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_credential.name %>
      </dd>

      <dt>
        Date received
      </dt>
      <dd>
        <%= @the_credential.date_received %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_credential.description %>
      </dd>

      <dt>
        Institution
      </dt>
      <dd>
        <%= @the_credential.institution %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_credential.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_credential.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit credential
    </h2>

    <form action="/modify_credential/<%= @the_credential.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_credential.name %>">
      </div>

      <div>
        <label for="date_received_box">
          Date received
        </label>

        <input type="date" id="date_received_box" name="query_date_received" value="<%= @the_credential.date_received %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_credential.description %>">
      </div>

      <div>
        <label for="institution_box">
          Institution
        </label>

        <input type="text" id="institution_box" name="query_institution" value="<%= @the_credential.institution %>">
      </div>

      <button>
        Update credential
      </button>
    </form>
  </div>
</div>

<hr>
