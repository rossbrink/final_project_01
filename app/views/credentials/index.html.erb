<div>
  <div>
    <h1>
      List of all credentials
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new credential
    </h2>

    <form action="/insert_credential" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="date_received_box">
          Date received
        </label>

        <input type="date" id="date_received_box" name="query_date_received">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="institution_box">
          Institution
        </label>

        <input type="text" id="institution_box" name="query_institution">
      </div>

      <button>
        Create credential
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Date received
        </th>

        <th>
          Description
        </th>

        <th>
          Institution
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_credentials.each do |a_credential| %>
      <tr>
        <td>
          <%= a_credential.id %>
        </td>

        <td>
          <%= a_credential.name %>
        </td>

        <td>
          <%= a_credential.date_received %>
        </td>

        <td>
          <%= a_credential.description %>
        </td>

        <td>
          <%= a_credential.institution %>
        </td>

        <td>
          <%= time_ago_in_words(a_credential.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_credential.updated_at) %> ago
        </td>

        <td>
          <a href="/credentials/<%= a_credential.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
